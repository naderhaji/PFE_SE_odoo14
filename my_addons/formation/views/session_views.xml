        <!-- calendar view -->
        <record model="ir.ui.view" id="session_calendar_view">
            <field name="name">calendar</field>
            <field name="model">formation.formation</field>
            <field name="arch" type="xml">
                <calendar string="Session Calendar" date_start="date_debut" date_stop="date_fin">

                </calendar>
            </field>
        </record>

        <!-- search view  -->

        <record model="ir.ui.view" id="session_search_view">
            <field name="name">session search</field>
            <field name="model">formation.formation</field>
            <field name="arch" type="xml">
                <search>
                    <field name="nom_session_formation"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                </search>

            </field>

        </record>


        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="session_action_window">
            <field name="name">Session Formation</field>
            <field name="res_model">formation.formation</field>
            <field name="view_mode">kanban,tree,form,calendar</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    créez votre premiére Formation!
                </p>
            </field>
        </record>


