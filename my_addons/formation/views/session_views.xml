        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="session_list_view">
            <field name="name">Session Formation list</field>
            <field name="model">formation.formation</field>
            <field name="arch" type="xml">
                <tree decoration-success="state == 'done'" decoration-danger="state == 'terminé'">
                    <field name="session_formation_id"/>
                    <field name="nom_session_formation"/>
                    <field name="niveau_session_formation" optional="hide"/>
                    <field name="participants_number" optional="show"/>
                    <field name="objectif_global" optional="hide"/>
                    <field name="date_debut"/>
                    <field name="periode"/>
                    <field name="date_fin"/>
                    <field name="prix"/>
                    <field name="state"
                    decoration-success="state == 'done'"
                    decoration-info="state == 'prochainement'"
                    decoration-danger="state == 'terminé'"
                    widget="badge"/>

                </tree>
            </field>
        </record>


        <!-- explicit form view definition -->

        <record model="ir.ui.view" id="session_form_view">
            <field name="name">Session Formation Form</field>
            <field name="model">formation.formation</field>
            <field name="arch" type="xml">
                <form>

                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                    attrs="{'invisible': [('active', '=', True)]}"/>
                    <header>

                        <field name="state" widget="statusbar" options="{'clickable' : '1'}" />
                    </header>
                    <sheet>
                        <!--<div class="oe_button_box" name="button_box" groups="base.group_user">
                            <button name="200" type="action" context="{'search_default_expected': True}" class="oe_stat_button" icon="fa-users" help="Total Registrations for this Session">
                                <field name="participant_id" widget="statinfo" string="Participants"/>
                            </button>
                        </div> -->


                        <div class="oe_button_box" name="button_box">

                            <button name="action_open_participants" type="object" class="oe_stat_button"
                                    icon="fa-users">
                                <div class="o_stat_info">
                                    <field name="nombre_participant" class="o_stat_value"/>
                                    <span class="o_stat_text">Participants</span>
                                </div>
                            </button>

                            <button name="action_open_deponses" type="object" class="oe_stat_button"
                                    icon="fa-usd">

                                <div class="o_stat_info">
                                    <span class="o_stat_text">Deponses</span>
                                </div>

                            </button>





                        </div>

                        <div class="oe_title">
                            <h2>
                                <field name="priority" widget="priority" class="mr-3"/>
                                <field name="session_formation_id" readonly="1" />
                            </h2>
                        </div>




                        <group>
                            <group>
                                <field name="session_formation_id"/>
                                <field name="nom_session_formation"/>
                                <field name="niveau_session_formation"/>
                                <field name="participants_number"/>
                                <field name="address"/>
                                
                            </group>
                            <group>
                                <field name="objectif_global"/>
                                <field name="date_debut"/>
                                <field name="date_fin"/>
                                <field name="periode"/>
                                <field name="prix"/>
                                <field name="active" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

