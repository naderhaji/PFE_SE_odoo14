<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="session_list_view">
            <field name="name">Session Formation list</field>
            <field name="model">formation.formation</field>
            <field name="arch" type="xml">
                <tree decoration-success="state == 'done'" decoration-danger="state == 'terminé'">
                    <field name="id_session_formation"/>
                    <field name="nom_session_formation"/>
                    <field name="niveau_session_formation" optional="hide"/>
                    <field name="nombre_participant" optional="show"/>
                    <field name="objectif_global" optional="hide"/>
                    <field name="date_debut"/>
                    <field name="periode"/>
                    <field name="date_fin"/>
                    <field name="prix"/>
                    <field name="state"
                    decoration-success="state == 'done'"
                    decoration-info="state == 'prochainement'"
                    decoration-danger="state == 'terminé'"
                    widget="badge"/>

                </tree>
            </field>
        </record>


        <!-- explicit form view definition -->

        <record model="ir.ui.view" id="session_form_view">
            <field name="name">Session Formation Form</field>
            <field name="model">formation.formation</field>
            <field name="arch" type="xml">
                <form>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                    attrs="{'invisible': [('active', '=', True)]}"/>
                    <header>
                        <field name="state" widget="statusbar" options="{'clickable' : '1'}" />
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="id_session_formation"/>
                                <field name="nom_session_formation"/>
                                <field name="niveau_session_formation"/>
                                <field name="nombre_participant"/>
                            </group>
                            <group>
                                <field name="objectif_global"/>
                                <field name="date_debut"/>
                                <field name="date_fin"/>
                                <field name="periode"/>
                                <field name="prix"/>
                                <field name="active" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Kanban view -->

        <record model="ir.ui.view" id="view_session_kanban">
            <field name="name">session.formation.kanban</field>
            <field name="model">formation.formation</field>
            <field name="arch" type="xml">
                <kanban default_group_by="nom_session_formation">
                    <field name="color"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_color_{{kanban_getcolor(record.color.raw_value)}}
                                            oe_kanban_global_click_edit oe_semantic_html_override
                                            oe_kanban_card {{record.group_fancy==1 ? 'oe_kanban_card_fancy' : ''}}">
                                <div class="oe_dropdown_kanban">
                                    <!-- dropdown menu -->
                                    <div class="oe_dropdown_toggle">
                                        <i class="fa fa-bars fa-lg" title="Manage" aria-label="Manage"/>
                                        <ul class="oe_dropdown_menu">
                                            <li>
                                                <a type="delete">Delete</a>
                                            </li>
                                            <li>
                                                <ul class="oe_kanban_colorpicker"
                                                    data-field="color"/>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="oe_clear"></div>
                                </div>
                                <div t-attf-class="oe_kanban_content">
                                    <!-- title -->
                                    Session name:
                                    <field name="nom_session_formation"/>
                                    <br/>
                                    Start date:
                                    <field name="date_debut"/>
                                    <br/>
                                    Date Fin:
                                    <field name="date_fin"/>
                                    <br/>
                                    Prix:
                                    <field name="prix"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>




