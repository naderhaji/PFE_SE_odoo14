                                </group>
                            </page>
                            <page string="Revenues">
                                <field name="revenu_id"></field>
                            </page>
                            <page string="Note">
                                <group>
                                <field name="note"></field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
