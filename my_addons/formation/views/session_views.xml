            </field>
        </record>

        <!-- Tree view revenu -->
         <record model="ir.ui.view" id="revenu_list_view">
            <field name="name">Revenu list</field>
            <field name="model">formation.revenu</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="revenu_id"/>
                    <field name="revenu_total"/>
                    <field name="revenu_net" optional="hide"/>
                    <field name="payment_total_participant" optional="show"/>
                    <field name="deponse_total" optional="hide"/>
                    <field name="expected_revenue"/>
                    <field name="session_formation_id"/>
                </tree>
            </field>
        </record>

