        <!-- Kanban view -->

        <record model="ir.ui.view" id="view_session_kanban">
            <field name="name">session.formation.kanban</field>
            <field name="model">formation.formation</field>
            <field name="arch" type="xml">

                <kanban class="o_session_kanban_view" default_group_by="nom_session_formation"
                        quick_create_view="session.session_session_form_view_quick_create" sample="1">
                    <field name="nom_session_formation"/>
                    <field name="date_debut"/>
                    <field name="date_fin"/>
                    <field name="state"
                           options="{&quot;group_by_tooltip&quot;: {&quot;description&quot;: &quot;Description&quot;}}"/>
                    <field name="address"/>


                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="d-flex flex-column p-0 oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_content p-0 m-0 position-relative row d-flex flex-fill">
                                    <div class="col-3 bg-primary p-2 text-center d-flex flex-column justify-content-center">
                                        <div t-esc="record.date_debut.raw_value.getDate()"
                                             class="o_session_fontsize_20"/>
                                        <div>
                                            <t t-esc="moment(record.date_debut.raw_value).format('MMM')"/>
                                            <t t-esc="record.date_debut.raw_value.getFullYear()"/>
                                        </div>
                                        <div>
                                            <t t-esc="moment(record.date_debut.raw_value).format('LT')"/>
                                        </div>
                                        <div t-if="moment(record.date_debut.raw_value).dayOfYear() !== moment(record.date_fin.raw_value).dayOfYear()">
                                            <i class="fa fa-arrow-right o_session_fontsize_09" title="Date fin"/>
                                            <t t-esc="moment(record.date_fin.raw_value).format('D MMM')"/>
                                        </div>
                                    </div>
                                    <div class="col-9 py-2 px-3 d-flex flex-column justify-content-between pt-3">

                                        <div>
                                            <div class="o_kanban_record_title o_text_overflow"
                                                 t-att-title="record.nom_session_formation.value">
                                                <field name="nom_session_formation"/>
                                            </div>
                                            <div t-if="record.address.value">
                                                <i class="fa fa-map-marker" title="Location"/>
                                                <span class="o_text_overflow o_session_kanban_location"
                                                      t-esc="record.address.value"/>
                                            </div>
                                        </div>
                                        <div>
                                            <br/>
                                            <h5 class="o_session_fontsize_11 p-0">
                                                <p>THE TEAM</p>
                                            </h5>

                                            Session name:
                                            <field name="nom_session_formation"/>
                                            <br/>
                                            Prix:
                                            <field name="prix"/>

                                        </div>


                                        <div class="o_kanban_record_bottom">
                                            <div class="oe_kanban_bottom_left">
                                                <field name="activity_ids" widget="kanban_activity"/>
                                            </div>
                                            <div class="oe_kanban_bottom_right">
                                                <field name="state" widget="state_selection"/>

                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>


