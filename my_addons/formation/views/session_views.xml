                                    <div class="col-3 bg-primary p-2 text-center d-flex flex-column justify-content-center">

                                    <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                        <div class="o_kanban_image d-none d-md-block" t-attf-style="background-image:url('#{kanban_image('formation.formation','image_1920', record.id.raw_value, placeholder)}')">
                                            <img class="o_kanban_image_inner_pic" t-att-src="kanban_image('formation.formation','image_1920', record.id.raw_value)"/>

                                        </div>
                                        </div>

                                        <div t-esc="record.date_debut.raw_value.getDate()"
                                             class="o_session_fontsize_20"/>



