                  action="depense_action_window"/>



        <!-- ///////////////////////////////////// Revenu //////////////////////////////////// -->

        <!-- Revenu form view -->

        <record model="ir.ui.view" id="revenu_form_view">
            <field name="name">Revenu</field>
            <field name="model">formation.revenu</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>

                                <field name="revenu_id"/>
                                <field name="revenu_total"/>
                                <field name="revenu_net"/>
                                <field name="payment_total_participant"/>
                            </group>
                            <group>
                                <field name="deponse_total"/>
                                <field name="expected_revenue"/>
                                <field name="session_formation_id"/>
