<odoo>
    <data>

        <!-- explicit list view definition -->

        <record model="ir.ui.view" id="session_list_view">
            <field name="name">Session Formation list</field>
            <field name="model">formation.formation</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="id_session_formation"/>
                    <field name="nom_session_formation"/>
                    <field name="niveau_session_formation"/>
                    <field name="nombre_participant"/>
                    <field name="objectif_global"/>
                    <field name="date_debut"/>
                    <field name="periode"/>
                    <field name="date_fin"/>
                    <field name="prix"/>
                    <field name="state"/>

                </tree>
            </field>
        </record>


        <!-- explicit form view definition -->

        <record model="ir.ui.view" id="session_form_view">
            <field name="name">Session Formation Form</field>
            <field name="model">formation.formation</field>
            <field name="arch" type="xml">
                <form>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                    attrs="{'invisible': [('active', '=', True)]}"/>
                    <header>
                        <field name="state" widget="statusbar" options="{'clickable' : '1'}" />
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="id_session_formation"/>
                                <field name="nom_session_formation"/>
                                <field name="niveau_session_formation"/>
                                <field name="nombre_participant"/>
                            </group>
                            <group>
                                <field name="objectif_global"/>
                                <field name="date_debut"/>
                                <field name="date_fin"/>
                                <field name="periode"/>
                                <field name="prix"/>
                                <field name="active" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Kanban view -->

        <record id="view_session_kanban" model="ir.ui.view">
            <field name="name">session.formation.kanban</field>
            <field name="model">formation.formation</field>
            <field name="arch" type="xml">
                <kanban default_order="id asc">
                    <field name="id_session_formation"/>
                    <field name="nom_session_formation"/>
                    <field name="niveau_session_formation"/>

                    <field name="nombre_participant"/>
                    <field name="objectif_global"/>
                    <field name="date_debut"/>
                    <field name="date_fin"/>
                    <field name="periode"/>
                    <field name="prix"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <ul>
                                        <li>

                                            ID:
                                            <field name="id_session_formation"/>
                                        </li>
                                        <li>

                                            Name:
                                            <field name="nom_session_formation"/>
                                        </li>
                                        <li>

                                            Nombre Participant:
                                            <field name="nombre_participant"/>
                                        </li>
                                        <li>

                                            Date Début:
                                            <field name="date_debut"/>
                                        </li>
                                        <li>

                                            Date Fin:
                                            <field name="date_fin"/>

                                        </li>
                                        <li>

                                            Prix:
                                            <field name="prix"/>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- calendar view -->
        <record model="ir.ui.view" id="session_calendar_view">
            <field name="name">calendar</field>
            <field name="model">formation.formation</field>
            <field name="arch" type="xml">
                <calendar string="Session Calendar" date_start="date_debut" date_stop="date_fin">

                </calendar>
            </field>
        </record>

        <!-- search view  -->

        <record model="ir.ui.view" id="session_search_view">
            <field name="name">session search</field>
            <field name="model">formation.formation</field>
            <field name="arch" type="xml">
                <search>
                    <field name="nom_session_formation"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                </search>

            </field>

        </record>


        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="session_action_window">
            <field name="name">Session Formation</field>
            <field name="res_model">formation.formation</field>
            <field name="view_mode">tree,kanban,form,calendar</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    créez votre premiére Formation!
                </p>
            </field>
        </record>


        <!-- server action to the one above -->
        <!--
            <record model="ir.actions.server" id="formation.action_server">
              <field name="name">Formation server</field>
              <field name="model_id" ref="model_formation_formation"/>
              <field name="state">code</field>
              <field name="code">
                action = {
                  "type": "ir.actions.act_window",
                  "view_mode": "tree,form",
                  "res_model": model._name,
                }
              </field>
            </record>
        -->

        <!-- Top menu item -->

        <menuitem name="Formation" id="formation.menu_root"/>

        <!-- menu categories -->

        <menuitem name="Session" id="Session_formation_cat" parent="formation.menu_root"/>
        <!-- <menuitem name="Menu 2" id="formation.menu_2" parent="formation.menu_root"/> -->

        <!-- actions -->

        <menuitem name="List of Session" id="session_formation_list" parent="Session_formation_cat"
                  action="session_action_window"/>
        <!--   <menuitem name="Server to list" id="formation" parent="formation.menu_2"
                     action="formation.action_server"/>
       -->
    </data>
</odoo>