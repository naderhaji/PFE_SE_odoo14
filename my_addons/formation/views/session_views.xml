        <!-- depense form view -->

        <record model="ir.ui.view" id="depense_form_view">
            <field name="name">depense.form</field>
            <field name="model">formation.depense</field>
            <field name="arch" type="xml">
                <form string="Depense Form">
                    <sheet>
                        <group>
                            <field name="depense_id"/>
                            <field name="depense_equipement"/>
                            <field name="depense_aliments_boissons"/>
                            <field name="depense_formateur"/>
                            <field name="depense_totale"/>
                            <field name="session_formation_id"/>
                        </group>
                    </sheet>


                </form>
            </field>
        </record>

        <!-- Tree view depense -->
        <record model="ir.ui.view" id="depense_list_view">
            <field name="name">Depense Formation list</field>
            <field name="model">formation.depense</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="depense_id"/>
                    <field name="depense_equipement"/>
                    <field name="depense_aliments_boissons" optional="hide"/>
                    <field name="depense_formateur" optional="show"/>
                    <field name="depense_totale" optional="hide"/>
                    <field name="session_formation_id"/>
                </tree>
            </field>
        </record>

                <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="depense_action_window">
